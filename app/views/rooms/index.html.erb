<div class="container">
<h1> hello </h1>
  <button type="button" class="" data-toggle="modal" data-target=".bd-example-modal-lg">Create a new room</button>
  <%#= link_to new_room_path do %>
    <%# <button> add new room </button> %>
  <%# end %>
  <% @rooms.each do |room| %>
    <h2><%= link_to room.name , room_path(room) %></h2>
    <p><%= room.base_price %></p>
    <p><%= room.headline %></p>
    <p><%= room.capacity %></p>
    <p><%= room.description %></p>
    <%= link_to edit_room_path(room) do %>
      <button> ⚙️ edit </button>
    <% end %>
    <%= link_to room_path(room),  method: :delete, data: { confirm: "are you sure!! 🥳" } do %>
      <button> 🗑 delete </button>
    <% end %>
<!--     <//%= link_to 'Edit', edit_flat_path(@flat) %> -->
  <% end %>

</div>


  <%# Modal for new room form %>
  <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
         <div id="root"></div> 
        <% content_for :after_js do %>
         <%= javascript_pack_tag 'room_react' %>
        <% end %>
      </div>
    </div>
  </div>



